 vector<int> temp;
    for (int i=0,j=n-1;i<=j;i++,j--)
        {
            if(i<j)
            {
                temp.push_back(arr[j]);
                temp.push_back(arr[i]);
            }
            if (i==j)
                {
                    temp.push_back(arr[i]);
                }
        }
        
     for(int i=0;i<n;i++)
        {
            arr[i]=temp[i];
        }
